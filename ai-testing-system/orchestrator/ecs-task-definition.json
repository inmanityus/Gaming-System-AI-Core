{
  "family": "body-broker-qa-orchestrator",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::695353648052:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::695353648052:role/gamingSystemServicesTaskRole",
  "containerDefinitions": [
    {
      "name": "qa-orchestrator",
      "image": "695353648052.dkr.ecr.us-east-1.amazonaws.com/bodybroker-services:qa-orchestrator",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "S3_BUCKET",
          "value": "body-broker-qa-captures"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "DB_HOST",
          "value": "gaming-system-bodybroker-db.cal6eoegigyq.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_NAME",
          "value": "bodybroker_qa"
        },
        {
          "name": "SQS_QUEUE_URL",
          "value": "https://sqs.us-east-1.amazonaws.com/695353648052/body-broker-qa-analysis-jobs"
        }
      ],
      "secrets": [
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:695353648052:secret:bodybroker/api-keys-QKeEhs:ANTHROPIC_API_KEY::"
        },
        {
          "name": "GOOGLE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:695353648052:secret:bodybroker/api-keys-QKeEhs:GOOGLE_API_KEY::"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:695353648052:secret:bodybroker/api-keys-QKeEhs:OPENAI_API_KEY::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/body-broker/qa-orchestrator",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

