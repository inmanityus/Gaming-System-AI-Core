FROM python:3.11-slim

WORKDIR /app

# Copy shared HTTP clients
COPY shared/ ./shared/

# Copy only this service
COPY world_state/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY world_state/ ./world_state/

WORKDIR /app

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "world_state.server:app", "--host", "0.0.0.0", "--port", "8000"]
