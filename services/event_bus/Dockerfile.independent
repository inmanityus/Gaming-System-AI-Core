FROM python:3.11-slim

WORKDIR /app

# Copy shared HTTP clients
COPY shared/ ./shared/

# Copy only this service
COPY event_bus/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY event_bus/ ./event_bus/

WORKDIR /app

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "event_bus.server:app", "--host", "0.0.0.0", "--port", "8000"]
