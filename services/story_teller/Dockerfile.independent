FROM python:3.11-slim

WORKDIR /app

# Copy shared HTTP clients
COPY shared/ ./shared/

# Copy only this service
COPY story_teller/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY story_teller/ ./story_teller/

WORKDIR /app

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "story_teller.server:app", "--host", "0.0.0.0", "--port", "8000"]
