FROM python:3.11-slim

WORKDIR /app

# Copy shared HTTP clients
COPY shared/ ./shared/

# Copy only this service
COPY quest_system/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY quest_system/ ./quest_system/

WORKDIR /app

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "quest_system.server:app", "--host", "0.0.0.0", "--port", "8000"]
