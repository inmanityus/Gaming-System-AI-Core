FROM python:3.11-slim

WORKDIR /app

# Copy shared HTTP clients
COPY shared/ ./shared/

# Copy only this service
COPY language_system/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY language_system/ ./language_system/

WORKDIR /app

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "language_system.api.server:app", "--host", "0.0.0.0", "--port", "8000"]
