FROM python:3.11-slim

WORKDIR /app

# Copy shared HTTP clients
COPY shared/ ./shared/

# Copy only this service
COPY model_management/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY model_management/ ./model_management/

WORKDIR /app

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "model_management.server:app", "--host", "0.0.0.0", "--port", "8000"]
