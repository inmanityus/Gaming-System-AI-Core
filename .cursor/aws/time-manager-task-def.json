{
  "family": "time-manager",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::695353648052:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::695353648052:role/timeManagerTaskRole",
  "containerDefinitions": [
    {
      "name": "time-manager",
      "image": "695353648052.dkr.ecr.us-east-1.amazonaws.com/bodybroker-services:time_manager-latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SERVICE_NAME",
          "value": "time-manager"
        },
        {
          "name": "WEATHER_EVENTS_TOPIC_ARN",
          "value": "arn:aws:sns:us-east-1:695353648052:gaming-system-weather-events"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/gaming-system/time-manager",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}

