{
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "containerDefinitions": [
    {
      "image": "695353648052.dkr.ecr.us-east-1.amazonaws.com/bodybroker-services:environmental-narrative-latest",
      "name": "environmental-narrative",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-stream-prefix": "ecs",
          "awslogs-region": "us-east-1",
          "awslogs-group": "/ecs/gaming-system/environmental-narrative"
        }
      },
      "environment": [
        {
          "value": "environmental-narrative",
          "name": "SERVICE_NAME"
        }
      ]
    }
  ],
  "family": "environmental-narrative",
  "executionRoleArn": "arn:aws:iam::695353648052:role/ecsTaskExecutionRole",
  "memory": "512",
  "cpu": "256"
}
